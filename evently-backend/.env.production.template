# Production Environment Variables Template
# Copy this file to .env.production and fill in the actual values
# DO NOT commit .env.production to version control

# Database
DATABASE_URL="your-production-database-url"

# JWT & Session Secrets  
JWT_SECRET="your-production-jwt-secret-here"
SESSION_SECRET="your-production-session-secret-here"

# Google OAuth
# Make sure these match your Google Console configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
# IMPORTANT: This must exactly match the URL in your Google Console
GOOGLE_CALLBACK_URL="https://your-vercel-app.vercel.app/api/auth/google/callback"

# Frontend URL
FRONTEND_URL="https://your-frontend-domain.com"

# Node Environment
NODE_ENV="production"

# Port (Vercel will auto-assign, but can be set)
PORT="3000"
